%h1 Create New Event

- if flash[:notice]
  #flashNotice
    = flash[:notice]
</br>

#content
  = form_tag create_new_event_path do
    .row
      =label :event, :title, 'Title', :class => "formLabel"
      =text_field :event, 'title', :class => "formTextBox"
    <br/>
    .row
      =label :event, :location, 'Location', :class => "formLabel"
      =text_field :event, 'location', :class => "formTextBox"
    <br/>
    .row
      =label :event, :description, 'Description', :class => "formLabel"
      =text_field :event, 'description', :class => "formTextBox"
    <br/>
    .row
      =label :event, :date, 'Date and Time', :class => "formLabel"
      =datetime_field :event, 'date', :value => Time.zone.now.strftime('%Y-%m-%d %l:%M%p'), placeholder: "YYYY-MM-DD  HH:mmAM", :class => "formTextBox"
    <br/>
    = submit_tag 'Submit', :class => "button"
  = link_to 'Back', admin_index_path, :class => "button"