%h1 Create New Event

- if flash[:notice]
  #flashNotice
    = flash[:notice]
</br>

#content
  = form_tag create_new_event_path do
    .row
      =label :event, :title, 'Title', :class => "formLabel"
      =text_field :event, 'title'
    <br/>
    .row
      =label :event, :location, 'Location', :class => "formLabel"
      =text_field :event, 'location'
    <br/>
    .row
      = label_tag :description, "Description: "
      = text_area_tag 'description', nil, size: "60x10"
    <br/>
    .row
      = label :event, :url, 'URL'
      = text_field :event, 'url', placeholder: "Place url for link to external source", size: '60x1'
    .row
      =label :event, :date, 'Date and Time', :class => "formLabel"
      =datetime_field :event, 'date', :value => Time.zone.now.strftime('%Y-%m-%d %l:%M%p'), placeholder: "YYYY-MM-DD  HH:mmAM"
    <br/>
    = submit_tag 'Submit', :class => "button"
  = link_to 'Back', admin_index_path, :class => "button"