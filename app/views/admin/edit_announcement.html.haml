#content
  = form_tag update_announcement_path(@id, @announcement), :method => :put do
    = label :announcement, :title, "Title: "
    = text_area :announcement, 'title', cols: 40, rows: 3, :value => @target_announcement.title
    <br/>
    = label :announcement, :content, "Content: "
    = text_area :announcement, 'content', cols: 40, rows: 5, :value => @target_announcement.content
    <br/>
    = submit_tag 'Submit', :class => "button"
  = link_to 'Back', admin_index_path, :class => "button"
