
<div class="console">
  <h2>CommunityGrows Board Login</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, :class => "input_text" %>
      <%= f.email_field :email, :class => "input", autofocus: true, :placeholder => "username@email.com", :required => true %>
    </div>
  
    <div class="field">
      <%= f.label :password, :class => "input_text" %>
      <%= f.password_field :password, :class => "input", autocomplete: "off", :placeholder => "password", :required => true %>
    </div>
  
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>
  
    <div class="actions">
      <%= f.submit " Log in " %>
    </div>
  <% end %>
</div>

