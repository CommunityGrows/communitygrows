
<div class="console">
  <h2>CommunityGrows Board Sign In</h2>
  
  <% if flash[:message] %>
    <div class="sign_in_flash_message">
      <p><%= flash[:message] %></p>
    </div>
  <% end %>
  
  <% if flash[:notice] %>
    <div class="sign_in_flash_notice">
      <p><%= flash[:notice] %></p>
    </div>
  <% end %>
  
  <% if flash[:alert] %>
    <div class="sign_in_flash_alert">
      <p><%= flash[:alert] %></p>
    </div>
  <% end %>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, :class => "input_text" %>
      <%= f.email_field :email, :class => "input", autofocus: true, :placeholder => "username@email.com", :required => true %>
    </div>
  
    <div class="field">
      <%= f.label :password, :class => "input_text" %>
      <%= f.password_field :password, :class => "input", autocomplete: "off", :placeholder => "password", :required => true %>
    </div>
  
    <!--<% if devise_mapping.rememberable? -%>-->
    <!--  <div class="field">-->
    <!--    <%= f.check_box :remember_me %>-->
    <!--    <%= f.label :remember_me %>-->
    <!--  </div>-->
    <!--<% end -%>-->
  
    <div class="actions">
      <%= f.submit "Log in", :class => "submit_button" %>
    </div>
  <% end %>
</div>

