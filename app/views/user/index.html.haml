%h1 Edit Account Credentials
- if flash[:notice]
  - flash[:notice].each do |msg|
    #flashNotice  
      = msg
</br>

#form
= form_tag update_user_credentials_path(@user), :method => :put do
  = label_tag :email, "Email: "
  #field
  = text_field :user, 'email', :placeholder => @user.email
  <br/>
  = label_tag :password, "Password "
  #field
  = text_field :user, 'password'
  <br/>
  = label_tag :password_confirmation, "Password Confirmation "
  #field
  = text_field :user, 'password_confirmation'
  <br/>
  = submit_tag 'Submit', :class => "buttonSmall"
=link_to 'Back', dashboard_index_path, :class => "buttonSmall"