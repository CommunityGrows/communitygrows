#content
  = form_tag update_announcement_path, :method => :put do
    = label :title, "Title: "
    = text_area :title, 'title', cols: 40, rows: 3, :value => @announcement.title
    <br/>
    = label :content, "Content: "
    = text_area :content, 'content', cols: 40, rows: 10, :value => @announcement.content
    <br/>
    = submit_tag 'Submit', :class => "button"
  = link_to 'Back', committee_index_path(@comittee_type), :class => "button"
