#content
  = form_tag update_executive_announcement_path(@executive_announcement_id, @executive_announcement), :method => :put do
    = label :executive_announcement, :title, "Title: "
    = text_area :executive_announcement, 'title', cols: 40, rows: 3, :value => @executive_announcement.title
    <br/>
    = label :executive_announcement, :content, "Content: "
    = text_area :executive_announcement, 'content', cols: 40, rows: 10, :value => @executive_announcement.content
    <br/>
    = submit_tag 'Submit', :class => "button"
  = link_to 'Back', executive_committee_index_path, :class => "button"
