#docRepo
  %h1 Document Repository
  

- if flash[:notice] and flash[:notice]!="Signed in successfully."
  #flashNotice
    = flash[:notice]

%h2#committeeTitle CommunityGrows Administration

%table#docs
  %thead#filebar
    %tr
      %td File name
      %td URL
      %td Updated at
      %td Edit
      %td Delete
  %tbody
    // - documents = Document.where(:committee_type => 'executive')
    - documents = Document.where(:committee_type => 'CGadmin')
    - if documents.empty?
      %td= "No files have been entered"
    - documents.each do |file|
      %tr
        %td= file.title
        %td= link_to file.title, url_for(file.url)
        %td= file.updated_at
        %td= link_to "Edit document", edit_file_path(file.id)
        %td= link_to "Delete document", delete_file_path(file.id), data: { confirm: 'Are you sure?' }
        
