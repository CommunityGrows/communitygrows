%h1 Document Repository
  
#flashNotice
  - if flash[:notice] and flash[:notice]!="Signed in successfully."
    = flash[:notice]

= link_to 'Add new file', new_file_path, :class => "btn btn-success btn-large"
- @categories.each do |category|

  -if not category.hidden?

    %h2= "#{category.name}"
    %div{id: "#category_#{category.id}"}
      %table.table.table-striped.table-bordered
        %thead.bg-info
          %tr
            %th File name
            %th Updated at
            %th Read Status
        = render :partial => "documents", :locals => { :category => category, :curr_user => @curr_user, :page => "documents" }
     