%h1 Edit current file 

- if flash[:notice] == "Populate all fields before submission."
  #flashNotice
    = flash[:notice]

= form_tag update_file_path(@id, @file), :method => :put do

  = label :file, :title, 'Title'
  = text_field :file, 'title', :value => @file.title
  
  = label :file, :url, 'URL'
  = text_field :file, 'url', :value => @file.url


  = label :file, :category_id, 'Category'
  = select :file, :category_id, @categories.map{ |category| [category.name, category.id]}.to_h 

  = submit_tag 'Submit'
=link_to 'back', documents_path